<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activites.AdminLoginActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/splashanimation" />


    <EditText
        android:id="@+id/confirmationET"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/custom_edit_text"
        android:drawableStart="@drawable/ic_conformation"
        android:drawablePadding="10dp"
        android:hint="Enter Login Code"
        android:inputType="number"
        android:paddingStart="10dp" />

    <Button
        android:id="@+id/confirmBTN"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/confirmationET"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="@color/black"
        android:text="Confirm Code"
        android:textColor="@color/white" />


</RelativeLayout>